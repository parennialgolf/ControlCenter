.PHONY: deploy status logs restart

# Deploy the SerialRelayController service
deploy:
	@echo "ðŸ‘‰ Running deploy script for SerialRelayController..."
	@scripts/deploy.sh

# Show current service status
status:
	@echo "ðŸ”Ž Status of serialrelaycontroller.service"
	@sudo systemctl status serialrelaycontroller.service --no-pager

# Tail live logs
logs:
	@echo "ðŸ“„ Tailing logs for serialrelaycontroller.service (Ctrl+C to exit)"
	@sudo journalctl -fu serialrelaycontroller.service

# Restart the service manually
restart:
	@echo "ðŸ”„ Restarting serialrelaycontroller.service"
	@sudo systemctl restart serialrelaycontroller.service
	@sudo systemctl status serialrelaycontroller.service --no-pager
