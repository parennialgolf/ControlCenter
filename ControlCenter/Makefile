.PHONY: deploy status logs restart

# Deploy the ControlCenter service
deploy:
	@echo "ðŸ‘‰ Running deploy script for ControlCenter..."
	@scripts/deploy.sh

# Show current service status
status:
	@echo "ðŸ”Ž Status of controlcenter.service"
	@sudo systemctl status controlcenter.service --no-pager

# Tail live logs
logs:
	@echo "ðŸ“„ Tailing logs for controlcenter.service (Ctrl+C to exit)"
	@sudo journalctl -fu controlcenter.service

# Restart the service manually
restart:
	@echo "ðŸ”„ Restarting controlcenter.service"
	@sudo systemctl restart controlcenter.service
	@sudo systemctl status controlcenter.service --no-pager
